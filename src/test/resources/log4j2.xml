<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%X{testName} [%t] %-5level %c{1}.%M(Line %L) - %msg%n"/>
    </Console>
  </Appenders>

  <Loggers>
    <!-- Set logging level and package -->
    <Root level="info">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>
